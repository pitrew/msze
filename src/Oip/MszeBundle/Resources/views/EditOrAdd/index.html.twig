    margin-top: -125px;
}

.block_mass_edit_other
{
    background-color: red;
    top: 50%;
    left: 50%;
    margin-left: -110px;
    margin-top: -110px;
}

.block_mass_edit_box
{
    width: 20px;
}

.block_mass_edit_textarea
{
    width: 140px;
    height: 33px;
}
